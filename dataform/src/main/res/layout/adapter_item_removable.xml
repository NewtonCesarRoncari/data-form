<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/respiro_visual_card">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/imageViewRemoverItem"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewLinha1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/cor_textview_item_removivel_1"
            android:textStyle="bold"
            tools:text="@tools:sample/full_names" />

        <TextView
            android:id="@+id/textViewLinha2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/cor_textview_item_removivel_2"
            android:textStyle="italic"
            tools:text="@tools:sample/full_names" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageViewRemoverItem"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/ic_remover_item" />

</RelativeLayout>